{
    "name": "SPO View It",
    "version": "1.0",
    "description": "Force SPO to Reading View",
    "background": {
        "scripts": [ "background.js" ]
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "https://*.sharepoint.com/*"
      ],
